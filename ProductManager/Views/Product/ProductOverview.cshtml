@model IEnumerable<ProductManager.MVC.Models.ProductViewModel>;

@{
    ViewData["Title"] = "Product Overview Page";
}

<div id="ProductOverview">
    <a asp-area="" asp-controller="Product" asp-action="ProductCreation">+</a>
    <table id="ProductTable">
        <tr>
            <form method="get">
            <th><input name="Name" placeholder="Name" /><button>&#8639;</button></th>
            <th><input name="Brand" placeholder="Brand" /><button>&#8643;</button></th>
            <th>Price</th>
            <th>Contents</th>
            <th>Unit</th>
            </form>
        </tr>

        @foreach (ProductViewModel product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Price</td>
                <td>@product.Contents</td>
                <td>@product.Unit</td>
            </tr>
        }

    </table>
    <button>&lt;</button>
    <button>&gt;</button>
</div>